{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "monorepo": true,
  "root": "apps/api",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/api/tsconfig.app.json"
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json",
        "webpack": true,
        "plugins": [
          {
            "name": "@nestjs/graphql",
            "options": {
              "typeFileNameSuffix": [".input.ts", ".args.ts", ".model.ts"],
              "introspectComments": true
            }
          }
        ]
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json",
        "plugins": [
          {
            "name": "@nestjs/graphql",
            "options": {
              "typeFileNameSuffix": [".input.ts", ".args.ts", ".model.ts"],
              "introspectComments": true
            }
